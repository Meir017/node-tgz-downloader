    "version": "0.2.0",
    "configurations": [        
        {
            "type": "node",
            "request": "launch",
            "name": "download package",
            "program": "${workspaceFolder}/bin/download-tgz",
            "args": [
                "package",
                "node-tgz-downloader",
                "--devDependencies"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "download search",
            "program": "${workspaceFolder}/bin/download-tgz",
            "args": [
                "search",
                "tgz",
                "--devDependencies"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "download local package-lock",
            "program": "${workspaceFolder}/bin/download-tgz",
            "args": [
                "package-lock",
                "./package-lock.json",
                "--directory",
                "custom-tarballs"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "download remote package-lock",
            "program": "${workspaceFolder}/bin/download-tgz",
            "args": [
                "package-lock",
                "https://raw.githubusercontent.com/Meir017/node-tgz-downloader/master/package-lock.json"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "download local package-json",
            "program": "${workspaceFolder}/bin/download-tgz",
            "args": [
                "package-json",
                "./package.json",
                "--devDependencies"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "download remote package-json",
            "program": "${workspaceFolder}/bin/download-tgz",
            "args": [
                "package-json",
                "https://raw.githubusercontent.com/Meir017/node-tgz-downloader/master/package.json",
                "--devDependencies"
            ]
        }
    ]
}